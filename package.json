{
  "name": "export-size",
  "version": "0.5.2",
  "homepage": "https://github.com/antfu/export-size#readme",
  "bugs": "https://github.com/antfu/export-size/issues",
  "license": "MIT",
  "packageManager": "pnpm@8.6.12",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/export-size.git"
  },
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "files": [
    "dist",
    "bin"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "export-size": "bin/export-size.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "esno src/cli.ts",
    "prepublishOnly": "npm run build",
    "release": "npx bumpp --commit --push --tag && npm publish"
  },
  "dependencies": {
    "@babel/parser": "^7.15.8",
    "@babel/traverse": "^7.15.4",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "brotli-size": "^4.0.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.9.1",
    "cli-table3": "^0.6.0",
    "enhanced-resolve": "^5.8.3",
    "esbuild": "^0.13.8",
    "filesize": "^8.0.3",
    "fs-extra": "^10.0.0",
    "gzip-size": "^6.0.0",
    "rollup": "^2.58.0",
    "terser": "^5.9.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.10.0",
    "@types/cli-progress": "^3.9.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.1",
    "@types/yargs": "^17.0.4",
    "bumpp": "^7.1.1",
    "eslint": "^8.0.1",
    "esno": "^0.10.1",
    "lodash-es": "^4.17.21",
    "tsup": "^5.4.2",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": "@antfu"
  }
}
