{
  "name": "export-size",
  "version": "0.5.2",
  "homepage": "https://github.com/antfu/export-size#readme",
  "bugs": "https://github.com/antfu/export-size/issues",
  "license": "MIT",
  "packageManager": "pnpm@8.6.12",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/export-size.git"
  },
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "files": [
    "dist",
    "bin"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "export-size": "bin/export-size.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "esno src/cli.ts",
    "prepublishOnly": "npm run build",
    "release": "npx bumpp --commit --push --tag && npm publish"
  },
  "dependencies": {
    "@babel/parser": "^7.22.10",
    "@babel/traverse": "^7.22.10",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "brotli-size": "^4.0.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.3",
    "enhanced-resolve": "^5.15.0",
    "esbuild": "^0.19.2",
    "filesize": "^10.0.12",
    "fs-extra": "^11.1.1",
    "gzip-size": "^7.0.0",
    "rollup": "^3.28.0",
    "terser": "^5.19.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@types/cli-progress": "^3.11.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.0",
    "@types/yargs": "^17.0.24",
    "bumpp": "^9.1.1",
    "eslint": "^8.47.0",
    "esno": "^0.17.0",
    "lodash-es": "^4.17.21",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": "@antfu",
    "rules": {
      "no-console": "off"
    }
  }
}
